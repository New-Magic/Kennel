/**
顶部样式
*/

.container {
  display: flex;
  flex: 1;
  flex-direction: column;
  background-color: #fff;
}

.header {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  /* background-color: red; */
  align-items: center;
}

.setting {
  width: 60rpx;
  height: 60rpx;
}

.moneyIcon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.moneyCount {
  width: 150rpx;
  height: 60rpx;
  margin-left: 10rpx;
}

.box {
  display: flex;
  flex: 1;
  align-items: center;
}

.settingBox {
  margin-right: 50rpx;
  display: flex;
  align-items: center;
  width: 100rpx;
}

.textStyle {
  font-size: 40rpx;
}

/**
狗窝
*/
.middle {
  display: flex;
  flex: 1;
  /* background: red; */
  align-items: flex-end;
}

.kennel {
  flex: 1;
  height: 800rpx;
  /* background: yellow; */
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx;
}

.kennelBox {
  width: 30%;
  height: 300rpx;
  margin: 20rpx 10rpx;
  display:flex;
  align-items: flex-end;
}
.cushion9 {
  width: 100%;
  height: 30rpx;
  margin-bottom: 10rpx;
}

/**
底部样式
*/
.bottom {
  display: flex;
  margin: 10rpx 40rpx;
  align-items: flex-end;
}

.button {
  width: 150rpx;
  height: 160rpx;
  align-items: flex-start;
  margin-right: 25rpx;
  display: inline-block;
}
.opraIcon{
  width:150rpx;
  height:120rpx;
  margin-top: -10rpx;
}
.opraIcon1{
  width:150rpx;
  height:40rpx;
}
.opraIcon2{
  margin-top: 40rpx;
  width:145rpx;
  height:130rpx;
}

.buildButton {
  width: 250rpx;
  height: 220rpx;
  align-items: center;
}

