.store-box {
  width:90%;
  height:90%;
  margin:5%;
  display: block;
}

.header {
  float: left;
}

.bcImg {
  width: 100%;
  height: 100%;
}

.title {
  float:left;
  font-size:50rpx;
  margin:20rpx 50rpx;
  text-align:center;
  font-weight: bold;
}

.gift-img {
  width:120rpx;
  height:128rpx;
  float:left;
  position:relative;
  top:-20rpx;
}

.gift {
  float:left;
  width:100px;
  height:40px;
  margin:10px;
  margin-left:15px;
  font-size:20px;
  text-align:center;
  line-height:40px;
  font-weight: bold;
}

.list {
  width:80%;
  height:70%;
  float:left;
  margin: 5% 10%;
}

.btn {
  float:left;
  text-align:center;
  width:100%;
}

.btnImg {
  width: 200rpx;
  height: 80rpx;
}
