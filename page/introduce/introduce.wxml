<view class="container">
  <view class="box" style="background:url(./resources/outline.png) 100%/100% no-repeat">
    <view class="header">
      <view class="imageContainer">
        <image src="./resources/title.png" class="title"/>
        <image src="./resources/dogbook.png" class="dogbook" />
      </view>
      <view class="imageContainer">
        <image src="./resources/photo.png" class="photo"/>
      </view>
    </view>
    <view class="listBox" style="background:url(./resources/dogBackImg.png) 100%/100% no-repeat">
      <view class="dogContainer">
        <image src="./resources/dog.png" class="dog"/>
      </view>
      <view class="describe">
        <text class="nameStyle">雪纳瑞</text>
        <view class="info">
          <text class="infoStyle">身高：30cm</text>
          <text class="infoStyle">体重：10kg</text>
          <text class="infoStyle">性格：害羞</text>
        </view>
      </view>
    </view>
    <view class="bottom">
      <view>
        <image src="./resources/leftrow.png" class="row" />
      </view>
      <view
        class="closeback"
        style="background:url(./resources/closeback.png) 100%/100% no-repeat"
      >
        <image src="./resources/close.png" class="close"/>
      </view>
      <view>
        <image src="./resources/rightrow.png" class="row" />        
      </view>
    </view>
  </view>
  
</view>
